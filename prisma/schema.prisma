generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL_STRING")
}

enum ROLE {
  BUYER
  SELLER
  ADMIN
}

model User {
  id    String @id @default(uuid())
  name  String
  email String @unique
  password String
  role ROLE
  createdAt DateTime @default(now())
}
