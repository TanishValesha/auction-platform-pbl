generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL_STRING")
}

model Bid {
  id        String   @id @default(uuid())
  placedAmount    Int
  createdAt DateTime @default(now())
  userId String
  user   User   @relation(fields: [userId], references: [id])
  itemId String
  item   Item   @relation(fields: [itemId], references: [id])
}


model User {
  id           String  @id @default(uuid())
  email        String  @unique
  password     String
  firstName    String
  lastName     String
  phone        String
  address      String
  userType     UserType
  companyName  String?
  businessType String?
  createdAt    DateTime @default(now())
  items        Item[]
  bids         Bid[]
}

model Item {
  id             String @id @default(uuid())
  ownerId        String
  owner          User @relation(fields: [ownerId], references: [id])    
  title          String
  description    String
  currentBid     Int @default(0)
  startingPrice  Int
  imageLinks     String[]
  bids           Int @default(0)
  category       ItemType
  condition      ItemCondition
  views          Int @default(0)
  watchers       Int @default(0)
  duration       Int
  startDateTime  DateTime
  bidsList         Bid[]
}

enum ItemCondition {
  new
  like_new
  excellent
  good
  fair
  poor
}
enum ItemType {
  Art
  Collectibles
  Electronics
  Fashion
  Furniture
  Jewelry
  Music
  Accessories
  Home 
  Decor
  Books
  Sports
  Toys
  Vehicles
  Other
}

enum UserType {
  BUYER
  SELLER
  ADMIN
}